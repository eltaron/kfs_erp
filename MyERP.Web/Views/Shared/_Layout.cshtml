<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - المنصة الرقمية</title>
    <!-- 1. SEO Meta Tags -->
    <meta name="description" content="المنصة الرقمية الموحدة لمحافظة كفر الشيخ - نظام ERP شامل لإدارة الموارد البشرية، المخازن، الشئون القانونية، والحملة">
    <meta name="keywords" content="ERP, كفر الشيخ, موارد بشرية, مخازن, حكومة الكترونية, تحول رقمي">
    <meta name="author" content="الإدارة العامة لنظم المعلومات والتحول الرقمي">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- animate -->
    <link rel="stylesheet" href="~/css/animate/animate.css">
    <!-- Global Css Link -->
    <link rel="stylesheet" href="~/css/global/main.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap">
</head>
<body style="margin:0;">

    <!-- Top Bar -->
    <section class="top-bar bg-dark bg-light-radial">
        <div class="container">
            <div class="row pt-2 pb-2">
                <div class="col time">
                    <div id="clock" class="BannerBarText text-light wow fadeInUp" data-wow-offset="10"></div>
                </div>
                <div class="col d-none d-lg-block text-start">
                    <div class="links wow fadeInDown" data-wow-offset="10">
                        <a class="Prayer" href="http://prayertimes3.today/egypt-eg/kafrsheikh-175.html" target="_blank" title="مواقيت الصلاة"><i class="fa-solid fa-mosque"></i></a>
                        <a class="weather" href="http://ema.gov.eg/wp/archives/105" target="_blank" title="الطقس"><i class="fa-solid fa-cloud-sun-rain"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Header LG -->
    <header class="d-none d-lg-block">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <div class="logo d-flex mt-5 mx-auto">
                        <img src="~/image/kfs-logo (2).png" alt="" class="wow fadeInRight" data-wow-offset="10" data-wow-delay="1s">
                        <div class="border m-2"></div>
                    </div>
                </div>
                <div class="col-8">
                    <div class="head text-center pt-4">
                        <img class="wow fadeInDown" data-wow-duration="2s" src="~/image/kfs-word.png" alt="">
                        <h4 class="light-dark pt-4 wow fadeInUp" data-wow-duration="3s">الإدارة العامة لنظم المعلومات والتحول الرقمي</h4>
                        <h5 class="light-dark pt-4 wow flipInY" data-wow-duration="4s">ERP System</h5>
                    </div>
                </div>
                <div class="col-2">
                    <div class="logo d-flex mt-5 mx-auto">
                        <div class="border m-2"></div>
                        <img src="~/image/eg-logo.png" alt="" class="wow fadeInLeft" data-wow-offset="10" data-wow-delay="1s">
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Start Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark bg-light-radial sticky-top">
        <div class="container">

            <!-- زر القائمة للموبايل -->
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#main"
                    aria-controls="main" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa-solid fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="main">

                <!-- القائمة الرئيسية (في المنتصف) -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 wow fadeIn" data-wow-duration="1s">

                    <!-- 1. الرئيسية -->
                    <li class="nav-item">
                        <a class="nav-link active fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-home ms-1"></i> الرئيسية
                        </a>
                    </li>

                    <!-- 2. قائمة الأنظمة (Dropdown مجمع) -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-layer-group ms-1"></i> الأنظمة والتطبيقات
                        </a>
                        <ul class="dropdown-menu p-0 text-end shadow" aria-labelledby="navbarDropdown">

                            <!-- قسم الإدارة الداخلية -->
                            <li><h6 class="dropdown-header text-primary">الإدارة الداخلية</h6></li>
                            <li><a class="dropdown-item pe-3" asp-area="HR" asp-controller="Home" asp-action="Index">الموارد البشرية (HR)</a></li>
                            <li><a class="dropdown-item pe-3" asp-area="Accounting" asp-controller="Home" asp-action="Index">الحسابات والمالية</a></li>
                            <li><a class="dropdown-item pe-3" asp-area="Legal" asp-controller="Home" asp-action="Index">الشئون القانونية</a></li>

                            <li><hr class="dropdown-divider"></li>

                            <!-- قسم اللوجيستيات والمشاريع -->
                            <li><h6 class="dropdown-header text-primary">التشغيل واللوجيستيات</h6></li>
                            <li><a class="dropdown-item pe-3" asp-area="Inventory" asp-controller="Home" asp-action="Index">المخازن والمشتريات</a></li>
                            <li><a class="dropdown-item pe-3" asp-area="Fleet" asp-controller="Home" asp-action="Index">الحملة والمركبات</a></li>
                            <li><a class="dropdown-item pe-3" asp-area="Projects" asp-controller="Home" asp-action="Index">المشاريع والتخطيط</a></li>

                            <li><hr class="dropdown-divider"></li>

                            <!-- قسم الخدمات والتعليم -->
                            <li><h6 class="dropdown-header text-primary">خدمات عامة</h6></li>
                            <li><a class="dropdown-item pe-3" asp-area="Education" asp-controller="Home" asp-action="Index">مركز استدامة (التدريب)</a></li>
                        </ul>
                    </li>

                    <!-- 3. لوحة التحكم (مفصول لوحدها لأهميتها) -->
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-warning" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-gear ms-1"></i> لوحة التحكم
                        </a>
                    </li>
                </ul>

                <!-- جزء تسجيل الدخول (Identity) -->
                <ul class="navbar-nav">
                    <!-- سنستخدم Partial View جاهزة تأتي مع Identity للتعرف على المستخدم المسجل -->
                    <partial name="_LoginPartial" />
                </ul>

            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!-- Body Content (هنا المحتوى المتغير لكل صفحة هيتحقن) -->
    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark bg-light-radial p-3 mt-auto">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <p class="copyright-text">
                        حقوق الطبع والنشر <span> &copy; @DateTime.Now.Year </span> الإدارة العامة لنظم المعلومات
                        <a class="nozom" href="#">فريق التطوير</a>.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/global/main.js"></script>
    <script src="~/js/animate/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>