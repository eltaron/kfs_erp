<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - المنصة الإحصائية</title>
    <!-- 1. SEO Meta Tags -->
    <meta name="description" content="المنصة الرقمية الموحدة لمحافظة كفر الشيخ - نظام ERP شامل لإدارة الموارد البشرية، المخازن، الشئون القانونية، والحملة">
    <meta name="keywords" content="ERP, كفر الشيخ, موارد بشرية, مخازن, حكومة الكترونية, تحول رقمي">
    <meta name="author" content="الإدارة العامة لنظم المعلومات والتحول الرقمي">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/all.min.css">
    <!-- animate -->
    <link rel="stylesheet" href="~/css/animate/animate.css">
    <!-- Theme style (AdminLTE) -->
    <link rel="stylesheet" href="~/css/global/adminlte.css">
    <!-- Dash Style -->
    <link rel="stylesheet" href="~/css/global/dash-style.css">
    <!-- Global Main -->
    <link rel="stylesheet" href="~/css/global/main.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white bg-dark">
            <!-- Right navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">الرئيسية العامة</a>
                </li>
            </ul>

            <!-- Left navbar links -->
            <ul class="navbar-nav ml-auto">
                <partial name="_LoginPartial" />
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 bg-dark">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/image/kfs-logo (2).png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">نظام ERP المحافظة</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar User Panel -->
                @if (User.Identity.IsAuthenticated)
                {
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <!-- صورة افتراضية للمستخدم -->
                        <img src="~/image/icons/7.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity.Name</a>
                    </div>
                </div>
                }

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <!-- HR Module -->
                        <li class="nav-item">
                            <a asp-area="HR" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "HR" ? "active" : "")">
                                <i class="nav-icon fas fa-users"></i>
                                <p>الموارد البشرية (HR)</p>
                            </a>
                        </li>

                        <!-- Inventory Module -->
                        <li class="nav-item">
                            <a asp-area="Inventory" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Inventory" ? "active" : "")">
                                <i class="nav-icon fas fa-boxes"></i>
                                <p>المخازن</p>
                            </a>
                        </li>

                        <!-- Legal Module -->
                        <li class="nav-item">
                            <a asp-area="Legal" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Legal" ? "active" : "")">
                                <i class="nav-icon fas fa-balance-scale"></i>
                                <p>الشئون القانونية</p>
                            </a>
                        </li>

                        <!-- Accounting Module -->
                        <li class="nav-item">
                            <a asp-area="Accounting" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Accounting" ? "active" : "")">
                                <i class="nav-icon fas fa-calculator"></i>
                                <p>الحسابات</p>
                            </a>
                        </li>

                        <!-- Fleet Module -->
                        <li class="nav-item">
                            <a asp-area="Fleet" asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["area"]?.ToString() == "Fleet" ? "active" : "")">
                                <i class="nav-icon fas fa-truck"></i>
                                <p>الحملة والمركبات</p>
                            </a>
                        </li>

                        <!-- Admin Module -->
                        <li class="nav-header">الإدارة</li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link text-warning">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>لوحة التحكم</p>
                            </a>
                        </li>

                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">الرئيسية</a></li>
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content (Here starts the specific page content) -->
            <section class="content">
                <div class="container-fluid">
                    <!-- وهنا سيتم حقن محتوى كل صفحة -->
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer bg-dark text-center">
            <strong>حقوق الطبع والنشر &copy; @DateTime.Now.Year <a href="#">إدارة النظم والتحول الرقمي</a>.</strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- Scripts -->
    <script src="~/js/jquery/jquery.min.js"></script>
    <script src="~/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/js/all.min.js"></script>
    <script src="~/js/global/adminlte.js"></script>
    <script src="~/js/global/main.js"></script>
    <script src="~/js/animate/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>