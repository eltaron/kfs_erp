@{
    ViewData["Title"] = "لوحة الإحصائيات العامة (HR)";
}

<!-- ChartJS -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"><i class="fas fa-tachometer-alt text-primary me-2"></i> موقف الموارد البشرية</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">HR</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <!-- 1. عدادات القوة البشرية (Top Stats) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>150</h3>
                        <p>إجمالي الموظفين</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a asp-controller="Employees" asp-action="Index" class="small-box-footer">السجل العام <i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>135</h3>
                        <p>حضور اليوم (90%)</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <a asp-controller="Attendance" asp-action="Index" class="small-box-footer">دفتر الحضور <i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>5</h3>
                        <p>أجازات ومأموريات</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-plane-departure"></i>
                    </div>
                    <a asp-controller="Leaves" asp-action="Regular" class="small-box-footer">التفاصيل <i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>10</h3>
                        <p>غياب وتأخير</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-times"></i>
                    </div>
                    <a asp-controller="Absence" asp-action="Settlement" class="small-box-footer">التسوية <i class="fas fa-arrow-circle-left"></i></a>
                </div>
            </div>
        </div>

        <!-- 2. الرسوم البيانية (Charts) -->
        <div class="row">

            <!-- الرسم البياني للحضور (Pie Chart) -->
            <div class="col-md-6">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">نسب الحضور والغياب اليومي</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="attendanceChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>

            <!-- الرسم البياني للموظفين حسب الإدارة (Bar Chart) -->
            <div class="col-md-6">
                <div class="card card-outline card-success">
                    <div class="card-header">
                        <h3 class="card-title">توزيع الموظفين على الإدارات</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="deptChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- 3. التنبيهات والإجراءات المعلقة (Pending Actions) -->
        <div class="row">

            <!-- جدول طلبات تحتاج موافقة -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header border-transparent bg-light">
                        <h3 class="card-title"><i class="fas fa-clipboard-list text-secondary me-2"></i> طلبات معلقة (للمدير)</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>رقم الطلب</th>
                                        <th>الموظف</th>
                                        <th>نوع الطلب</th>
                                        <th>تاريخ الطلب</th>
                                        <th>الحالة</th>
                                        <th>الإجراء</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><a href="#">OR9842</a></td>
                                        <td>فاطمة الشرباني</td>
                                        <td><span class="badge bg-purple">أجازة اعتيادي</span></td>
                                        <td>12/06/2024</td>
                                        <td><span class="badge bg-warning text-dark">انتظار</span></td>
                                        <td><button class="btn btn-sm btn-outline-primary">اعتماد</button></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">OR1848</a></td>
                                        <td>محمد فؤاد</td>
                                        <td><span class="badge bg-info">إذن تأخير</span></td>
                                        <td>13/06/2024</td>
                                        <td><span class="badge bg-warning text-dark">انتظار</span></td>
                                        <td><button class="btn btn-sm btn-outline-primary">اعتماد</button></td>
                                    </tr>
                                    <tr>
                                        <td><a href="#">OR7429</a></td>
                                        <td>بهجت إبراهيم</td>
                                        <td><span class="badge bg-danger">سلفة مالية</span></td>
                                        <td>14/06/2024</td>
                                        <td><span class="badge bg-warning text-dark">مراجعة</span></td>
                                        <td><button class="btn btn-sm btn-outline-primary">مراجعة</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-end">عرض كل الطلبات</a>
                    </div>
                </div>
            </div>

            <!-- تنبيهات انتهاء العقود والمعاشات -->
            <div class="col-md-4">
                <div class="card card-outline card-danger">
                    <div class="card-header">
                        <h3 class="card-title">تنبيهات هامة <span class="badge bg-danger ms-2">3</span></h3>
                    </div>
                    <div class="card-body p-0">
                        <ul class="products-list product-list-in-card pl-2 pr-2">
                            <!-- تنبيه 1: معاش -->
                            <li class="item p-3 border-bottom">
                                <div class="product-img">
                                    <i class="fas fa-hourglass-end text-danger fa-2x"></i>
                                </div>
                                <div class="product-info ms-3">
                                    <a asp-controller="Retirement" asp-action="Pending" class="product-title">
                                        إحالة للمعاش قريباً
                                        <span class="badge bg-danger float-end">شهر واحد</span>
                                    </a>
                                    <span class="product-description">
                                        الموظف: فاطمة عبدالفتاح الشرباني
                                    </span>
                                </div>
                            </li>
                            <!-- تنبيه 2: انتهاء عقد -->
                            <li class="item p-3 border-bottom">
                                <div class="product-img">
                                    <i class="fas fa-file-contract text-warning fa-2x"></i>
                                </div>
                                <div class="product-info ms-3">
                                    <a href="javascript:void(0)" class="product-title">
                                        تجديد عقد مؤقت
                                        <span class="badge bg-warning text-dark float-end">15 يوم</span>
                                    </a>
                                    <span class="product-description">
                                        الموظف: أمنة جمعة (السكرتارية)
                                    </span>
                                </div>
                            </li>
                            <!-- تنبيه 3: تقييم -->
                            <li class="item p-3">
                                <div class="product-img">
                                    <i class="fas fa-star-half-alt text-info fa-2x"></i>
                                </div>
                                <div class="product-info ms-3">
                                    <a href="javascript:void(0)" class="product-title">
                                        تقارير كفاءة متأخرة
                                        <span class="badge bg-info float-end">20 تقرير</span>
                                    </a>
                                    <span class="product-description">
                                        خاص بإدارة الشئون الهندسية
                                    </span>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="javascript:void(0)" class="uppercase">عرض التنبيهات</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


    <script>
        $(function () {

            /* -- CHART 1: Attendance (Donut) -- */
            var attendanceCanvas = $('#attendanceChart').get(0).getContext('2d');
            var attendanceData = {
                labels: ['حضور', 'غياب', 'مأموريات/أجازة', 'تأخير'],
                datasets: [
                    {
                        data: [135, 2, 5, 8], // أرقام وهمية للعرض
                        backgroundColor : ['#00a65a', '#f56954', '#f39c12', '#00c0ef'],
                    }
                ]
            }
            new Chart(attendanceCanvas, {
                type: 'doughnut',
                data: attendanceData,
                options: {
                    maintainAspectRatio: false,
                    responsive: true,
                }
            });

            /* -- CHART 2: Departments (Bar) -- */
            var deptCanvas = $('#deptChart').get(0).getContext('2d');
            var deptData = {
                labels: ['نظم المعلومات', 'التخطيط العمراني', 'الشئون القانونية', 'المالية', 'الهندسية'],
                datasets: [
                    {
                        label: 'عدد الموظفين',
                        backgroundColor: '#3c8dbc',
                        borderColor: '#3c8dbc',
                        data: [25, 40, 15, 30, 40]
                    }
                ]
            }
            new Chart(deptCanvas, {
                type: 'bar',
                data: deptData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });

        });
    </script>
