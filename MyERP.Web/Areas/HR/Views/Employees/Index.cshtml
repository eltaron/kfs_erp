<!-- 1. قسم الفلتر والبحث المتقدم -->
<div class="card card-outline card-primary collapsed-card">
    <div class="card-header">
        <h3 class="card-title"><i class="fas fa-filter mr-1"></i> بحث متقدم وفلترة</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <div class="card-body" style="display: none;">
        <form>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label>الرقم القومي / الوظيفي</label>
                    <input type="text" class="form-control" placeholder="أدخل الرقم...">
                </div>

                <div class="col-md-3 mb-3">
                    <label>اسم الموظف</label>
                    <input type="text" class="form-control" placeholder="بحث بالاسم...">
                </div>

                <div class="col-md-3 mb-3">
                    <label>الإدارة / القسم</label>
                    <select class="form-control select2">
                        <option value="">-- الكل --</option>
                        <option>الإدارة العامة لنظم المعلومات</option>
                        <option>التخطيط العمراني</option>
                        <option>الشئون الهندسية</option>
                    </select>
                </div>

                <div class="col-md-3 mb-3">
                    <label>الدرجة الوظيفية</label>
                    <select class="form-control">
                        <option value="">-- الكل --</option>
                        <option>مدير عام</option>
                        <option>الأولى</option>
                        <option>الثانية</option>
                    </select>
                </div>

                <div class="col-md-3 mb-3">
                    <label>نوع التعيين</label>
                    <select class="form-control">
                        <option value="">-- الكل --</option>
                        <option>دائم</option>
                        <option>مؤقت / عقد</option>
                    </select>
                </div>

                <div class="col-md-3 mb-3">
                    <label>حالة الموظف</label>
                    <select class="form-control">
                        <option value="1">على رأس العمل</option>
                        <option value="2">إجازة بدون مرتب</option>
                        <option value="3">منتهية خدمته</option>
                    </select>
                </div>

                <div class="col-md-12 text-left">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> بحث</button>
                    <button type="reset" class="btn btn-default">إعادة تعيين</button>
                </div>
            </div>
        </form>
    </div>
</div>

